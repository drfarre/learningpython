iteraciones =  input("cuantas veces debo escribir la respuesta? ")

centenario =  100 - int(edad) + int(anio_actual) -1

while int(iteraciones) > 0 :

    print(nombre," ,vas a cumplir 100 aÃ±os en ",centenario)
    iteraciones = int(iteraciones) - 1
